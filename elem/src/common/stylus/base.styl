body, html 
    width: 100%
    height: 100%
    line-height: 1
    font-weight: 200
    font-family: 'PingFang SC', 'STHeitiSC-Light', "Helvetica-Light", Arial, Helvetica, sans-serif
.clearfix 
    display: inline-block
    &:after 
        display: block
        height: 0
        line-height: 0
        content : '.'
        clear: both
        visibility: hidden


@media (-webkit-min-device-pixel-ratio: 1.5),(min-device-pixel-ratio: 1.5)
    .border-1px 
        &::after 
            -webkit-transform: scaleY(0.7)
            transform: scaleY(0.7)
@media (-webkit-min-device-pixel-ratio: 2.0),(min-device-pixel-ratio: 2.0)
    .border-1px 
        &::after 
            -webkit-transform: scaleY(0.5)
            transform: scaleY(0.5)
